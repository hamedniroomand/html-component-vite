{{#> "layouts/default.hbs" title="Home" meta_description="LiteStack - A lightweight, modern toolchain for building
static websites"}}
<section class="py-12 md:py-20">
    <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-gray-900 dark:text-white">
            <span class="block text-blue-600 dark:text-blue-500">LiteStack</span>
            <span class="block mt-3">Modern Static Sites Made Simple</span>
        </h1>
        <p class="mt-6 text-lg md:text-xl max-w-2xl mx-auto text-gray-600 dark:text-gray-300">
            Build lightning-fast websites with the perfect balance of simplicity and power. No heavyweight frameworks,
            just the right tools for the job.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
            <a href="https://github.com/hamedniroomand/lite-stack/blob/main/readme.md"
                class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md transition">
                Get Started
            </a>
            <a href="https://github.com/hamedniroomand/lite-stack" target="_blank" rel="noopener noreferrer"
                class="px-8 py-3 bg-white dark:bg-slate-800 hover:bg-gray-100 dark:hover:bg-slate-700 text-gray-700 dark:text-gray-300 font-medium rounded-lg shadow-md border border-gray-300 dark:border-slate-600 transition">
                <div class="flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path fill-rule="evenodd"
                            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                            clip-rule="evenodd"></path>
                    </svg>
                    GitHub
                </div>
            </a>
        </div>
    </div>
</section>

<section class="py-12 md:py-16">
    <div class="grid md:grid-cols-3 gap-8">
        {{> components/feature-card.hbs
        icon='<svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>'
        title='Lightning Fast'
        description='Built on Vite for blazing fast development and optimized production builds.'
        }}

        {{> components/feature-card.hbs
        icon='<svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z">
            </path>
        </svg>'
        title='Component-Based'
        description='Create reusable Handlebars components to build maintainable websites.'
        }}

        {{> components/feature-card.hbs
        icon='<svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01">
            </path>
        </svg>'
        title='Backend Compatible'
        description='Generate clean HTML, CSS, and JavaScript that integrates with any backend system.'
        }}
    </div>
</section>

<section class="py-12 md:py-16 bg-white dark:bg-slate-800 rounded-lg shadow-sm">
    <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">The Perfect Stack for Static Sites</h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            LiteStack combines the best minimal tools for modern web development without the bloat.
        </p>
    </div>
    <div class="grid md:grid-cols-4 gap-8 px-8">
        {{> components/tool-card.hbs
        logo='/statics/img/vite-logo.svg'
        name='Vite'
        description='Lightning fast build tool and dev server'
        }}

        {{> components/tool-card.hbs
        logo='/statics/img/handlebars-logo.svg'
        name='Handlebars'
        description='Powerful semantic templating language'
        }}

        {{> components/tool-card.hbs
        logo='/statics/img/alpine-logo.svg'
        name='Alpine.js'
        description='Lightweight JavaScript reactive framework'
        }}

        {{> components/tool-card.hbs
        logo='/statics/img/tailwind-logo.svg'
        name='TailwindCSS'
        description='Utility-first CSS framework for rapid styling'
        }}
    </div>
</section>

<section class="py-12 md:py-16">
    <div class="flex flex-col md:flex-row gap-12 items-center">
        <div class="md:w-1/2">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Simple Yet Powerful</h2>
            <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
                Get all the productivity benefits of component-based development without the complexity and bloat of
                JavaScript frameworks.
            </p>
            <ul class="mt-6 space-y-4">
                {{#each simple_powerful_features}}
                <li class="flex">
                    <svg class="h-6 w-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-gray-700 dark:text-gray-300">{{this}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="md:w-1/2 bg-gray-100 dark:bg-slate-800 rounded-xl p-6 shadow-md">
            <div class="flex items-center mb-4">
                <div class="flex space-x-2">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <div class="ml-4 text-sm text-gray-600 dark:text-gray-400">components/button.hbs</div>
            </div>
            <pre
                class="text-sm font-mono text-gray-800 dark:text-gray-300 bg-gray-50 dark:bg-slate-900 p-4 rounded overflow-x-auto">
&lt;button
  \{{#if id}} id="\{{id}}"\{{/if}}
  class="px-4 py-2 bg-blue-600 hover:bg-blue-700 
  text-white rounded-md shadow transition-colors
  \{{#if secondary}}!bg-gray-100 !text-gray-800 
  hover:!bg-gray-200 border border-gray-300\{{/if}}"
  \{{#if onclick}}x-on:click="\{{onclick}}"\{{/if}}&gt;
  \{{&gt; @partial-block }}
&lt;/button&gt;
        </pre>
        </div>
    </div>
</section>

<section class="py-12 md:py-16">
    <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Ready to Build Better Static Sites?</h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            Join the developers who are building faster, simpler, and more maintainable websites with LiteStack.
        </p>
        <div class="mt-8">
            <a href="https://github.com/hamedniroomand/lite-stack"
                class="inline-block px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md transition">
                Get Started Now
            </a>
        </div>
    </div>
</section>
{{/layouts/default.hbs}}